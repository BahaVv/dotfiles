set $mod Mod4

# Font for window titles. Will also be used by i3status unless otherwise specified in that config.
# is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:gohufont 11px

# Window styling
new_window 1pixel
new_float normal
hide_edge_borders both
popup_during_fullscreen smart

# Return to prev workspace when hitting current one
workspace_auto_back_and_forth yes

# Display brightness and audio adjustment for laptop keyboards
bindsym XF86MonBrightnessUp exec "xbacklight +10"
bindsym XF86MonBrightnessDown exec "xbacklight -10"
bindsym XF86AudioMute exec "amixer set Master toggle"
bindsym XF86AudioLowerVolume exec "amixer set Master 10%-"
bindsym XF86AudioRaiseVolume exec "amixer set Master 10%+"

# mpc commands (I lack media keys!)
bindsym $mod+Shift+F11 exec "mpc toggle"
bindsym $mod+Shift+F12 exec "mpc next"
bindsym $mod+Shift+F10 exec "mpc prev"

# Terminal hotkey
bindsym $mod+Return exec --no-startup-id urxvt

# Kill window
bindsym $mod+c kill

# Lock screen
bindsym $mod+z exec --no-startup-id i3lock -c 000000 --dpms

# dmenu
bindsym $mod+d exec --no-startup-id dmenu_run

# Horizontal split
bindsym $mod+y split h

# Vertical split 
bindsym $mod+v split v

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Fullscreen a container
bindsym $mod+Shift+f fullscreen

# Toggle floating container
bindsym $mod+Shift+space floating toggle

# Toggle focus between floating or tiled containers
bindsym $mod+space focus mode_toggle

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Focus parent container
bindsym $mod+a focus parent

# Focus child container
#bindsym $mod+d focus child

# Workspaces: names and default outputs (multi-monitor, defaults to mon0 if not found)
workspace "1:sys" output LVDS1
workspace "2:chat" output LVDS1
workspace "3:web" output LVDS1
workspace 4 output LVDS1
workspace 5 output LVDS1
workspace 6 output LVDS1
workspace 7 output LVDS1
workspace 8 output DVI-I-1
workspace "9" output DVI-I-1
workspace "10:snd" output DVI-I-1

# Switch to workspace
bindsym $mod+1 workspace 1:sys
bindsym $mod+2 workspace 2:chat
bindsym $mod+3 workspace 3:web
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10:snd

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace 1:sys
bindsym $mod+Shift+2 move container to workspace 2:chat
bindsym $mod+Shift+3 move container to workspace 3:web
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10:snd

# Window focus changing: vim style, then cursor keys
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window: vim style, then cursor keys
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Resize window
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
		# Shrink/Grow container sizes: vim style, then cursor keys
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Reload config
bindsym $mod+Shift+c reload
# Restart i3 (Preserves session)
bindsym $mod+Shift+r restart
# Exit i3 (Kills X)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'Quit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

# Start i3bar
bar {
	position top
	tray_output primary
	font pango:gohufont 11px
	status_command i3status
	#status_command /home/xales/.config/i3status/i3status.sh
	#status_command python ~/.config/status.py
	colors {
		separator #666666
		statusline #cccccc
	}
}


# Assign default window conditions for various processes
assign [class="^Firefox$"] → 3:web
assign [class="^Hexchat$"] → 2:chat
assign [title="^htop$"] → 1:sys
assign [title="^alsamixer$"] → 10:snd

for_window [class="Wine$"] floating enable
for_window [class="Steam$"] floating enable

# Auto-exec the following commands whenever i3 is run
exec firefox
exec --no-startup-id "urxvt -title htop -e htop"
exec --no-startup-id "urxvt -title alsamixer -e alsamixer"
exec hexchat
